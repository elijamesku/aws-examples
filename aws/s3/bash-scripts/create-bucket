#checking for bucket name
if [ -z "$1" ]; then
    echo "There needs to be a bucket name ex. ./bucket my-bucket-name."
    exit 1
fi

BUCKET_NAME=$1

echo "aws s3api create-bucket --bucket $BUCKET_NAME"

aws s3api create-bucket \
 --bucket $BUCKET_NAME \
 --create-bucket-configuration="LocationConstraint=ca-central-1"